<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/news_imgId"
        android:layout_width="130dp"
        android:src="@drawable/images2"
        android:layout_height="135dp"
        android:scaleType="centerCrop"
        android:layout_margin="2dp"/>

    <LinearLayout
        android:layout_toRightOf="@+id/news_imgId"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/news_titleId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:singleLine="true"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@id/imgId"/>

    <TextView
        android:id="@+id/news_contentid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleId"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        android:textColor="#65000000"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@id/imgId"/>
    </LinearLayout>
</RelativeLayout>