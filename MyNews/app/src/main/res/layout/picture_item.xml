<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/picture_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/picture_user_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/picture_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="user_name"
            android:singleLine="true"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_letter_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_sms" />

        <TextView
            android:id="@+id/text_letter_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="发霸信"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/picture_user_context"
        android:layout_below="@+id/picture_layout"
        android:layout_width="match_parent"
        android:text="这只猪笑死我了"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="23dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/relate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture_user_context">

        <ImageView
            android:id="@+id/picture_content_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/imagessss" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/eel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relate"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picture_image_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_good" />

            <TextView
                android:id="@+id/picture_good_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1763" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picture_comment_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_comment" />

            <TextView
                android:id="@+id/picture_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picture_share_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_share" />

            <TextView
                android:id="@+id/picture_share_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="619" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picture_favorite_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_favorite" />

            <TextView
                android:id="@+id/picture_favorite_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="556" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>
    <TextView
        android:id="@+id/ee"
        android:layout_below="@+id/eel"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>
    <TextView
        android:id="@+id/eea"
        android:layout_above="@+id/eel"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>
</RelativeLayout>