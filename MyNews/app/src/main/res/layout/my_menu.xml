<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sso_login_bg"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:onClick="Search"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/setting_head_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="未登录" />

        <Button
            android:onClick="Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/but"
            android:text="快速登录" />

        <Button
            android:onClick="Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/but"
            android:text="一秒注册" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="#aa9644" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cc0000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="以下为第三方快速登录"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:onClick="Search"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/sso_qq" />

        <ImageView
            android:onClick="Search"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/sso_wx" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f00"
            android:text="     与好友同享欢乐"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:onClick="Search"
                    android:layout_marginLeft="9dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/share_email_icon" />

                <ImageView
                    android:onClick="Search"
                    android:layout_marginLeft="9dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/share_friends_icon" />

                <ImageView
                    android:onClick="Search"
                    android:layout_marginLeft="9dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/share_qzone_icon_press" />

                <ImageView
                    android:onClick="Search"
                    android:layout_marginLeft="9dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/share_sina_icon" />

                <ImageView
                    android:onClick="Search"
                    android:layout_marginLeft="9dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/share_weibo_icon" />

                <ImageView
                    android:onClick="Search"
                    android:layout_marginLeft="9dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/share_qq_icon_press" />

                <ImageView
                    android:onClick="Search"
                    android:layout_marginLeft="9dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/share_weixin_icon" />

                <ImageView
                    android:onClick="Search"
                    android:layout_marginLeft="9dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/share_email_icon" />

                <ImageView
                    android:onClick="Search"
                    android:layout_marginLeft="9dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/share_qq_icon_press" />


                <ImageView
                    android:onClick="Search"
                    android:layout_marginLeft="9dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/share_sina_icon" />

            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>